include bootstrap
extends layout

block content
  +panel("Upload Media")
    script(src='/javascripts/upload.js')
    select( id="directory" ).form-control
      option( value="#{all_access}" ) Public
      option( value="#{single_access}" ) Personal
    input(id="collection", type="text", placeholder="Collection Name").form-control
    form(id="upload_form", method="post", enctype="multipart/form-data")
      input(type="file", name="video_uploaded", multiple).form-control
    div.progress
      div( id="progress" class="progress-bar", role="progressbar", aria-valuemin="0", aria-valuemax="100", style="width:0%") 0%
    input(id="upload_form_button", type="button", class="btn btn-primary", value="Upload")
